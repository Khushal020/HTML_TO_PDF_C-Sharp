<Page x:Class="HTMLTOPDF.CreateBill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HTMLTOPDF"
      mc:Ignorable="d" d:DesignWidth="587.663"
      Title="CreateBill" Height="511.151">

    <Grid>
        <Label Content="Company Name:" HorizontalAlignment="Left" Margin="87,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.893,0.44" FontSize="18"/>
        <TextBox x:Name="CompanyName" HorizontalAlignment="Left" Height="23" Margin="243,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.912,0.662" FontSize="18"/>
        <Label Content="GST NO.:" HorizontalAlignment="Left" Margin="87,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.254,0.542" FontSize="18"/>
        <Label Content="Address:" HorizontalAlignment="Left" Margin="86,182,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.585,0.621" FontSize="18"/>
        <Label Content="Product:" HorizontalAlignment="Left" Margin="87,247,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.7,1.056" FontSize="18"/>
        <Label Content="Quantity:" HorizontalAlignment="Left" Margin="87,368,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="87,312,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="GST_NO" HorizontalAlignment="Left" Height="23" Margin="243,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.431,0.563" FontSize="18"/>
        <TextBox x:Name="Address" HorizontalAlignment="Left" Height="23" Margin="243,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
