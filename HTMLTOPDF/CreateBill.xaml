        <Button x:Name="Print" Content="Print" HorizontalAlignment="Left" Margin="440,259,0,0" VerticalAlignment="Top" Width="75" Height="87" RenderTransformOrigin="0.52,0.831" Click="Button_Click"/>
        <Label Content="Mob No:" HorizontalAlignment="Left" Margin="87,430,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="MobNo" HorizontalAlignment="Left" Height="23" Margin="243,441,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18" TextChanged="TextBox_TextChanged_1"/>
        <Label x:Name="test" Content="Label" HorizontalAlignment="Left" Margin="456,441,0,0" VerticalAlignment="Top"/>

